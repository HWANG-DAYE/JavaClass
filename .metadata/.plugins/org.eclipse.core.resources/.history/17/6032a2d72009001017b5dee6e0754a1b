package project0325;

public class Ex01 {
	public static void main(String[] args) {
		
		for(int z=1; z<=5; z++) {
			for(int s=1; s<=5-z; s++) {
				System.out.print("  "); // %2d°¡ µÎÄ­ÀÌ¶ó °ø¹éµµ µÎÄ­
			}
			for(int i=z; i>=1; i--) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
		
		System.out.println("-------------");
		
		for(int z=1; z<=5; z++) {
			for(int s=1; s<=5-z; s++) {
				System.out.print("  "); // %2d°¡ µÎÄ­ÀÌ¶ó °ø¹éµµ µÎÄ­
			}
			for(int i=1; i<=z; i++) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
	}
}
