package EX;

public class ForEx12 {
	public static void main(String[] args) {
		for(int z=1; z<=5; z++) {
			for(int i=1; i<=z; i++) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
		System.out.println("-------------");
		
//		for(int z=1; z<=5; z++) {
//			for(int i=1; i<=z; i++) {
//				System.out.printf("%2d", i);
//			}
//			System.out.println();
//		} 
//		오른쪽으로 붙이는게 안됨
		
		for(int z=5; z>=1; z--) {
			for(int i=1; i<=z; i++) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
		System.out.println("-------------");
		
		for(int z=1; z<=5; z++) {
			for(int i=5; i>=z; i--) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
		System.out.println("-------------");
		
		for(int z=5; z>=1; z--) {
			for(int i=5; i>=z; i++) {
				System.out.printf("%2d", i);
			}
			System.out.println();
		}
		System.out.println("-------------");
		
		
	}
}
